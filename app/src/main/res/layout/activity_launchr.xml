<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_launchr_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sss"
        android:textSize="30sp"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="standard"
        android:onClick="standard"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_singleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="singleTop"
        android:onClick="singleTop"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_singleTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="singleTask"
        android:onClick="singleTask"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_singleInstance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="singleInstance"
        android:onClick="singleInstance"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_flag_new_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="flag_new_task"
        android:onClick="flag_new_task"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_flag_single_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="flag_single_top"
        android:onClick="flag_single_top"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_flag_clear_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="flag_clear_top"
        android:onClick="flag_clear_top"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_flag_clear_top_new_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="flag_clear_top_new_task"
        android:onClick="flag_clear_top_new_task"
        />

</LinearLayout>